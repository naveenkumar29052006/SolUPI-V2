generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id          String   @id @default(uuid())
    name        String 
    firstName   String?
    lastName    String?
    username    String?  @unique
    mobile      String?
    email       String   @unique
    password    String   
    walletAddr  String?
    isVerified  Boolean  @default(false)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    orders      Order[]

    @@index([email])
    @@index([username])
}


model Order {
    id          String      @id @default(uuid())
    userId      String 
    user        User        @relation (fields: [userId], references:[id])
    amount      Float
    walletAddr  String
    status      String      @default("PENDING")
    utrNumber   String?     @db.VarChar(50)
    txSignature String?  
    recipientTokenAccount String?    //user's usdc address  
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    completedAt DateTime?


    @@index([userId])
    @@index([status])
    @@index([utrNumber])

}


model EmailTransaction {
  id              String   @id @default(uuid())
  rrn             String   @unique
  sender          String
  transactionDate String
  amount          Float
  isUsed          Boolean  @default(false)
  createdAt       DateTime @default(now())
}
